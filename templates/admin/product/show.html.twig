{% extends "admin/base.html.twig" %}

{% block body %}
	<h1>Details du produit</h1>
	<main>
		{% if product is not null %}
			<div class="card" style="width: 18rem;">
				{% if product.picture starts with 'http'%}
					<img src="{{product.picture}}" class="card-img-top" alt="...">
				{% else %}
					<img src={{ vich_uploader_asset(product, 'pictureFile') }} alt="{{ product.name }}" class="img-fluid rounded shadow">
				{% endif %}

				<div class="card-body">
					<h6 class="card-title">Nom :{{ product.name }}</h6>
					<p class="card-text">Prix :
						{{ product.price }}</p>
					<p class="card-text">Prix :
						{{ product.category.name ?? 'N/A' }}</p>
					<div class= d-flex>
						<a href={{path('admin_product_update' , {'slug':product.slug} )}} class="btn btn-primary">Modifier</a>
						<a href={{path('admin_product_delete' , {'slug':product.slug} )}} class="btn btn-danger">Supprimer</a>
						<a href={{path('admin_product_index')}} class="btn btn-primary">Retour</a>
					</div>

				</div>
			</div>
		{% endif %}
	</main>

{% endblock %}
