<header>
	<nav class="navbar navbar-expand-lg bg-body-tertiary">
		<div class="container-fluid">
			<a class="navbar-brand" href={{path('app_home')}}>Lumi-Design</a>
			<button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
				<span class="navbar-toggler-icon"></span>
			</button>
			<div class="collapse navbar-collapse" id="navbarNav">
				<ul class="navbar-nav">
					{% if is_granted(['ROLE_ADMIN']) %}
						<li class="nav-item">
							<a class="nav-link active" aria-current="page" href={{path('admin_user_dashboard')}}>Dashboard</a>
						</li>
					{% endif %}


					<li class="nav-item">
						<a class="nav-link" href={{path('admin_product_index')}}>Produits</a>
					</li>
					<li class="nav-item">
						<a class="nav-link" href={{path('admin_category_index')}}>Categories</a>
					</li>
					{% if is_granted('IS_AUTHENTICATED') %}
					<li
						class="nav-item">
						<a class="nav-link" href={{path('front_profile')}}>Profile</a>
					</li>
					{% endif %}
					{% if not is_granted('IS_AUTHENTICATED') %}
						<li class="ms-auto d-flex align-items-center">
							<a class="nav-link" href={{ path('app_login') }}>Connexion</a>
							<a class="nav-link" href={{ path('app_inscription') }}>Inscription</a>

						</li>
					{% else %}
						<li class="ms-auto">
							<a class="nav-link" href={{ path('app_logout') }}>Deconnexion</a>
						</li>


					{% endif %}
				</ul>
			</div>
		</div>
	</nav>
